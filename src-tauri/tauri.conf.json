{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "statizen",
  "version": "1.0.6",
  "identifier": "com.statizen.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Statizen",
        "width": 900,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": false,
        "url": "index.html"
      },
      {
        "label": "overlay",
        "title": "Statizen Overlay",
        "width": 1920,
        "height": 1080,
        "resizable": false,
        "fullscreen": true,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "skipTaskbar": true,
        "visible": false,
        "url": "/overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "resources": []
  }
}
