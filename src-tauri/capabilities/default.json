{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "fs:default",
    "fs:allow-config-read-recursive",
    "fs:allow-config-write-recursive",
    "fs:read-all",
    "fs:write-all",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**" }]
    }
  ]
}
